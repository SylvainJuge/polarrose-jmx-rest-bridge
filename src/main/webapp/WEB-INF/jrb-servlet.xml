<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

  <!-- Badge Service -->

  <bean id="retrieveAttributeController" class="com.polarrose.jrb.controller.RetrieveAttributeController">
  </bean>

  <bean id="badgeServiceUrlMappings" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <props>
        <prop key="/retrieveAttribute">retrieveAttributeController</prop>
      </props>
    </property>
  </bean>

</beans>
